%h2 Sign In
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal no-label-form' }) do |f|
  .form-inputs
    = f.input :email, :required => false, :autofocus => true, label: false, placeholder: "Email"
    = f.input :password, :required => false, label: false, placeholder: "Password"
    = f.input :remember_me, :as => :boolean, :as => :boolean, :inline_label => 'remember me', :label => false 
    = f.button :submit, "Sign in", class: 'btn btn-large btn-primary'
    
= render "devise/shared/links"
