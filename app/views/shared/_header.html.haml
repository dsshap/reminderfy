.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Reminderfy", root_path, class: "brand"
      .nav-collapse.collapse
        %ul.nav
          %li{class: (reminderfy_current_page?(dashboard_path, root_path) ? "active" : "")}
            = link_to "Dashboard", dashboard_path
          %li{class: (current_page?(clients_path) ? "active" : "")}
            = link_to "Clients", clients_path
          %li{class: (current_page?(my_plan_path) ? "active" : "")}
            = link_to "My Plan", my_plan_path
        %p.navbar-text.pull-right
          Logged in as 
          = link_to @provider.email, edit_provider_registration_path, class: 'navbar-link'
          for 
          = @provider.establishment_name
          &nbsp;
          \/
          &nbsp;
          = link_to "sign out", destroy_provider_session_path, method: :delete, class: 'navbar-link'

